acl internal {
  10.0.0.0/8;
};

options {
  directory "/var/cache/bind";

  allow-notify {
    10.1.50.30;  # secondary #1
  };

  allow-transfer {
    10.1.50.30;  # secondary #1
		10.1.50.32;
		10.1.50.33;
		10.1.50.34;
    key ddns-transfer-key;
