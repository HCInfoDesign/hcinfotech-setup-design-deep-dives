acl internal {
  10.0.0.0/8;
};

options {
  directory "/var/cache/bind";

  allow-notify {
    10.1.51.85;  # secondary #1
    10.1.51.86;  # secondary #2
  };

  allow-transfer {
    10.1.51.84;  # primary
    10.1.51.85;  # secondary #1
    10.1.51.86;  # secondary #2
    key ddns-transfer-key;
  };

  allow-query { internal; };
  recursion no;
  notify yes;

  dnssec-validation auto;

  listen-on-v6 { any; };
};

